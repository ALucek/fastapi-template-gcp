# GCP project & region
PROJECT_ID=
REGION=us-central1

# Artifact Registry (Docker)
REPO=fastapi-repo
IMAGE=fastapi-cloudrun
TAG=v1

# Cloud Run
SERVICE=fastapi-api

# API Gateway
API_ID=fastapi-api
GATEWAY_ID=fastapi-gw
# Derived if not set: apigw-invoker@${PROJECT_ID}.iam.gserviceaccount.com
GATEWAY_SA=

# OpenAPI spec path (Swagger v2)
OPENAPI_SPEC=deploy/gateway-openapi.yaml

# App config (non-sensitive)
ENV=dev
LOG_LEVEL=info
PORT=8080

# Local-only placeholders (do not commit real values)
API_TOKEN=

# Optional: Cloud Run secret attachments (names, not values)
# Bindings are ENV_NAME=secret-name:version, comma-separated
# Example: attach Secret Manager secret "api-token" as env var API_TOKEN
# SECRETS="API_TOKEN=api-token:latest"

# Optional: Cloud Run regular environment variables (non-secrets)
# Comma-separated key=value list
# ENV_VARS="ENV=prod,LOG_LEVEL=info,FEATURE_FLAG=true"